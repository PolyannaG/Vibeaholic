<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Profile"
    android:background="@color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/editTextTextPersonName5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="69dp"
            android:text="@string/profile"
            android:textColor="#F1EEEE" />

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="196dp"
            android:layout_height="216dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="98dp"
            app:srcCompat="@android:drawable/gallery_thumb"
            tools:src="@tools:sample/backgrounds/scenic" />

        <ImageView
            android:id="@+id/mood_stats_1"
            android:layout_width="184dp"
            android:layout_height="188dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="660dp"
            app:srcCompat="@android:drawable/gallery_thumb"
            tools:src="@tools:sample/backgrounds/scenic" />

        <ImageView
            android:id="@+id/mood_stats_2"
            android:layout_width="184dp"
            android:layout_height="188dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="870dp"
            app:srcCompat="@android:drawable/gallery_thumb"
            tools:src="@tools:sample/backgrounds/scenic" />

        <ImageView
            android:id="@+id/profile_image1"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="365dp"
            android:clickable="true"
            app:srcCompat="@android:drawable/gallery_thumb"
            tools:src="@tools:sample/backgrounds/scenic" />



        <ImageView
            android:id="@+id/profile_image2"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginStart="125dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="365dp"
            android:clickable="true"
            app:srcCompat="@android:drawable/gallery_thumb"
            tools:src="@tools:sample/backgrounds/scenic" />



        <ImageView
            android:id="@+id/profile_image3"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginStart="240dp"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="365dp"
            android:clickable="true"
            app:srcCompat="@android:drawable/gallery_thumb"
            tools:src="@tools:sample/backgrounds/scenic" />



        <TextView
            android:id="@+id/my_playlists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="325dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:text="@string/my_playlists"
            android:textColor="#FBF8F8" />

        <TextView
            android:id="@+id/favourites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="460dp"
            android:text="@string/favourites"
            android:textColor="#FBF8F8" />

        <TextView
            android:id="@+id/listen_later"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="460dp"
            android:text="@string/listen_later"
            android:textColor="#FBF8F8" />


        <TextView
            android:id="@+id/recently_played"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="460dp"
            android:text="@string/recently_played"
            android:textColor="#FBF8F8" />

        <TextView
            android:id="@+id/editTextTextPersonName7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="620dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:text="@string/mood_statisitcs"
            android:textColor="#03A9F4" />

        <TextView
            android:id="@+id/last_week_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="220dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="660dp"

            android:text="Last week:"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/last_month_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="220dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="870dp"
            android:text="Last month:"
            android:textColor="#FFFFFF" />


        <Button
            android:id="@+id/menu"
            android:layout_width="46dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="25dp"
            android:clickable="true"
            app:backgroundTint="#101010"
            app:icon="@android:drawable/ic_menu_sort_by_size" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_profile"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="485dp" />


    </RelativeLayout>

</ScrollView>